        <div class="panel-footer">
            <h4> Quote of the Day</h4>
        </div>
        <div class="panel-body text-center">
            <blockquote class="blockquote">
                <p class="mb-0"><%= @quote.quote%></p>
                <footer class="blockquote-footer"><%= @quote.author%></footer>
            </blockquote>

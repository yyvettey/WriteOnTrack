<div class="navbar">
<div class="navbar-header">
<a class="navbar-brand" href="#">University Writing tracker</a>
</div>
<div class="collapse navbar-collapse">
    <ul class="nav navbar-nav navbar-right">
        <li><%=link_to "Logout", logout_path%></li>
    </ul>
</div>
</div>
<div class="container" style="margin-top:10%;">
  <h3 class="h3">Daily Analysis</h3>
  <%= line_chart @tasks, {curve: true, ytitle: "Users Count", xtitle: "Date"}%>
  <%= ENV['ADMIN']%>
</div>
<div class="row">
  <div class="container">
    <hr>
    <div class="float-center text-center" style="margin-top:7%">
        <div class="row">
          <div class="col-md-12 text-center">
            <%= label :user, :current_value, "Update Admin: "%>
          </div>
        </div>
        <div class="row"  style="margin-top:5%;">
          <div class="col-md-6 text-center">
            <%= text_field :user, :email ,{size: 30, id: "email_admin"}%>
          </div>
          <div class="col-md-2">
            :
          </div>
          <div class="col-md-2 text-center">
            <span class="btn btn-success" id="admin_add">Add</span>
          </div>
          <div class="col-md-2 text-center">
            <span class="btn btn-danger" id="admin_Remove">Remove</span>
          </div>
        </div>
    </div>
  </div>
</div>

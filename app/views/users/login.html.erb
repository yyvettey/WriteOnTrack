<div>
  <div class="header navbar top-bar fixed" id="myHeader">
  <div class="navbar-header">
    <%=image_tag("UWC_white.png", {class:"img-responsive", style:"height:10vh;"}) %>
  </div>
  <div class="collapse navbar-collapse">
  <ul class="nav navbar-nav navbar-right">
  <li><a href="#about">About</a></li>
  </ul>
  </div>
  </div>
        <div class="row">
            <div class="col-sm-offset-3 col-sm-6" style="margin-top: 50px;">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <div class="row">
                            <div class="col-sm-6 text-center">
                                <h3>Login</h3>
                            </div>
                            <div class="col-sm-6">
                                <%= link_to "Sign Up",new_user_path, {:class =>'btn btn-info',:style =>"float:right;margin-top:20px;"}%>
                            </div>
                        </div>
                    </div>
                    <div class="panel-body">
                        <%= bootstrap_form_for(:user_auth, {:url => auth_path} ) do |f| %>
                        <%= f.email_field :email, label: 'Email: ', required: true%>
                        <%= f.password_field :password, label: 'Password: ', required:true%>
                        <div class="row text-center">
                            <div class="col-sm-6">
                                <%= f.submit :Login , {:class=>'btn btn-success'}%>
                            </div>
                        <div class="col-sm-6">
                            <%= link_to "Forgot Password?", forgot_pass_path, {:class =>'btn btn-warning'}%>
                        </div>
                    </div>
                    <% end %>
                    </div>
                </div>
            </div>
        </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-sm-offset-3 col-sm-6" style="margin-top: 50px;">
      <div class="panel panel-default">
        <div class="panel-heading text-center">
            <h3>Reset Password</h3>
        </div>
        <div class="panel-body">
          <%= bootstrap_form_for(:user_auth, {:url => reset2_path, :method=>'post'}) do |f| %>
             <%= f.password_field :password, label: 'Password: ', required: true%>
             <%= f.password_field :password_confirmation, label: 'Confirm Password: ', require: true%>
             <%= f.hidden_field :id, value: @id%>
            <div class="row text-center">
                <%= f.submit :Reset , {:class=>'btn btn-success'}%>
            </div>
        <% end %>
        </div>
      </div>
    </div>
  </div>t
